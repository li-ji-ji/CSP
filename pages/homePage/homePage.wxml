<view class="window-box-error" style="display:{{error_dis}}">
  <view class="window-error">
    <view class="window-box">
      <view class="window-error-top">
        <view>错误</view>
        <view>
          请上传正确格式的文件
        </view>
      </view>
      <view class="window-error-button" bind:tap="display_error">我知道了
      </view>
    </view>
  </view>
</view>
<view class="window-box-error" style="display:none">
  <view class="window-error">
    <view class="window-box">
      <view class="window-error-top">
        <view>上传成功</view>
        <view>
          是否继续上传
        </view>
      </view>
      <view class="window-error-button" bind:tap="goAomunt">选择打印
      </view>
      <view class="window-error-button" bind:tap="getImg">继续上传
      </view>
    </view>
  </view>
</view>
