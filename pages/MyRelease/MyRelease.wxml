<block wx:for="{{taskList}}"wx:key="index">
<view class="list-item flex-wrap" bind:tap="taskDetails" data-task="{{item}}">
      <view class="flex-wrap list-item-user flex-1">
        <open-data type="userAvatarUrl" class="icon flex-1" />
        <view class="user-content flex-wrap flex-5">
          <view class="user-content-top flex-wrap">
            <open-data type="userNickName" class="top-userName" />
            <image src="/images/man.png" class="user-sex" />
          </view>
          <view class="user-content-bottom flex-wrap">
            <text class="user-bottom-time flex-1">{{item.time}}</text>
            <text class="user-bottom-school flex-1">{{item.school}}</text>
          </view>
        </view>
        
        <block wx:if="{{item.status==1}}">
            <image  src="/images/Publication.png" class="flex-1 task-status"></image>
        </block>
        <block wx:if="{{item.status==2}}">
            <image  src="/images/Accepted.png" class="flex-1 task-status"></image>
        </block>
        <block wx:if="{{item.status==3}}">
            <image  src="/images/complete.png" class="flex-1 task-status"></image>
        </block>
        <block wx:if="{{item.status==4}}">
            <image  src="/images/Settled.png" class="flex-1 task-status"></image>
        </block>
      </view>
      <view class="flex-wrap list-item-task flex-2">
        <view class="task-title flex-wrap flex-1">
          <text class="">{{item.title}}</text>
          <text class="task-title-reward">￥ {{item.taskReward}}</text>
        </view>

        <view class="task-text takeaddress flex-1 flex-wrap">
          <text class="takeaddress-title">取件地点</text>
          <text class="takeaddress-content task-content">{{item.express[0].takeaddress}}</text>
        </view>
        <view class="task-text targetaddress flex-1 flex-wrap">
          <text class="targetaddress-title">送达地点</text>
          <text class="targetaddress-content task-content">{{item.express[0].targetaddress}}</text>
        </view>
        
        <view class="task-text targetaddress flex-1 flex-wrap">
          <text class="targetaddress-title">备注</text>
          <text class="targetaddress-content task-content-remarks">{{item.remarks}}</text>
        </view>
      </view>
      <view class="flex-1"></view>
    </view>
    </block>