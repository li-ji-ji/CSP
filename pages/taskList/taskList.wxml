<swiper class="ppt" indicator-dots="{{pptConfig.indicatordots}}" autoplay="{{pptConfig.autoplay}}" interval="{{pptConfig.interval}}" duration="{{pptConfig.duration}}">
  <block wx:for="{{newData}}" wx:if="{{index<6}}" wx:key="index">
    <swiper-item class="ppt-item">
    <block wx:if="{{item.newsPicture}}">
    <image src="{{item.newsPicture}}" class="ppt-image" bind:tap="details" data-index="index" data-new="{{item}}" />
    </block>
    <block wx:if="{{item.newsPicture.length<=0}}">
    <image src="{{defaultImage}}" class="ppt-image" bind:tap="details" data-index="index" data-new="{{item}}" />
    </block>
    </swiper-item>
  </block>
</swiper>
