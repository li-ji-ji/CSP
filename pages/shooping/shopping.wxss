/* pages/homePage/shooping/shopping.wxss */

page {
  background-color: #f7f7f7;
}

.mian-bg {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.title-box {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.line {
  width: 200rpx;
  height: 0;
  border-top: 1rpx solid #000;
  margin: 0 30rpx;
}

.title-text {
  width: 145rpx;
  height: 50rpx;
  border: 1rpx solid #000;
  background-color: #FFF;
  border-radius: 30rpx;
  font-size: 14px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.storefront-box {
  width: 100%;
}

.storefront {
  width: 100%;
  height: 140rpx;
  margin-top: 24rpx;
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  align-content: center;
}

.storefront-text-name {
  margin-left: 30rpx;
  width: 100%;
  font-size: 20px;
}

.storefront-text-location {
  margin-left: 30rpx;
  width: 100%;
  font-size: 12px;
  color: #adadad;
}
