/* pages/orderList/orderList.wxss */

page {
	background-color: #f7f7f7;
}

.text {
	margin-top: 10rpx;
}

.main-bg {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.order-main-box {
	width: 92%;
	height: 400rpx;
	margin-top: 30rpx;
	border-radius: 40rpx;
	display: flex;
	justify-content: center;
	flex-wrap: wrap;
	background-color: #fff;
}


.oreder-top {
	width: 92%;
	height: 120rpx;
	display: flex;
	flex-wrap: wrap;
	border-bottom: 1rpx solid #000;
	margin-top: 30rpx;
}

.oreder-top-box {
	display: flex;
	justify-content: center;
	margin-left: 10rpx;
	font-size: 16px;

}

.oreder-top image {
	width: 40rpx;
	height: 40rpx;
}

.right {
	width: 100%;
	display: flex;
	justify-content: space-between;
}

.right view {
	width: 100rpx;
	text-align: center;

}

.oreder-bottom {
	width: 92%;
	height: 120rpx;
	display: flex;
	flex-wrap: wrap;
	margin-top: 15rpx;
}

.oreder-information {
	width: 100%;
	display: flex;
	justify-content: space-between
}

.oreder-information view {
	margin: 0 10rpx;
}

.demand-widows {
	display: flex;
}

.demand-widows view {
	margin: 0 6rpx;
	color: #FC943F;
}

.maskLayer {
	width: 100%;
	height: 100%;
	position: absolute;
	bottom: 0;
	background-color: red;
	z-index: 999;
	background-color: rgba(194, 194, 194, 0.65);
}

.demandChoose {
	position: absolute;
	bottom: 0;
	z-index: 999;
	width: 100%;
	background-color: #FFF;

}



.demand-choose {
	width: 100%;
	display: flex;
	flex-wrap: wrap;
	justify-content: center;
	margin-top: 30rpx;
	margin-bottom: 50rpx;
}

.go-back {
	width: 92%;
	display: flex;
	justify-content: space-around;
	margin: 10 0rpx;
}

.confirm {
	margin-top: 20rpx;
	width: 240rpx;
	height: 75rpx;
	color: #4d4dff;
	font-size: 36rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	border: 1rpx solid#000;
	border-radius: 20rpx;
	background-color: #A6F145;
}

.cancel {
	color: #99CC31;
	font-size: 36rpx;
}

.demand-box {
	width: 86%;
	display: flex;
	justify-content: center;
	font-size: 36rpx;
	margin-top: 20rpx;
	flex-wrap: wrap;
	margin: 6rpx 6rpx;

}

.demand-name {
	width: 100%;
	margin: 10rpx 6rpx;
}

.demand {
	width: 100%;
	display: flex;
	justify-content: space-around;
	flex-wrap: wrap;
}

.demand view {

	height: 65rpx;
	border: 1rpx solid#000;
	border-radius: 20rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.color {
	width: 135rpx;
}

.paper {
	width: 110rpx;
}

.use {
	width: 135rpx;
}
.printMode{
  width: 180rpx;
}
.onThis {
	color: #FFF;
	background-color: #FC943F;
}

.noThis {
	color: #FC943F;
	background-color: #FFF;
}

.demand-text {
	width: 68rpx;
	color: #FC943F;
	margin: 0 6rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.tap {
	width: 88%;
	font-size: 36rpx;
	color: red;
	display: flex;
	justify-content: center;
}

.buttom-box {
	position: absolute;
	position: fixed;
	bottom: 0;
	width: 100%;
	background-color: #FFF;
	height: 140rpx;
	display: flex;
	justify-content: space-around;
  z-index: 9;
}

.buttom-box button {
	width: 500rpx;
	height: 100rpx;
	margin: 25rpx;
	background-color: #FC943F;
	border-radius: 70rpx;
	color: #FFF;
	display: flex;
	justify-content: center;
	align-items: center;
}
.window-box-error {
  width: 100%;
  height: 100%;
  position: absolute;
  bottom: 0;
  background-color: rgba(75, 73, 73, 0.747);
  z-index: 99;
}


.window-error {
  width: 100%;
  height: 350rpx;
  margin-top: 400rpx;
  display: flex;
  justify-content: center;

  position: relative;
}

.window-box {
  width: 400rpx;
  height: 260rpx;
  position: absolute;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;

}

.window-error-top {
  width: 100%;
  height: 200rpx;
  background-color: rgb(19, 203, 228);
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  align-content: flex-start;
}
.window-error-top view{
  width: 92%;
  height: 30rpx;
  text-align: center;
  margin-top: 20rpx;
}
.window-error-button {
  width: 100%;
  height: 60rpx;
  border-top: 1rpx solid #000;
  background-color: #FC943F;
  color: #FFF;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  
}
.choose-box {
	width: 92%;
	background-color: #FFF;
	border-radius: 20rpx;
	align-items: center;
	margin: 15rpx;
}
.display {
	display: flex;
	justify-content: center;
	flex-wrap: wrap;
}
.choose {
	align-items: center;
	margin: 24rpx 50rpx;
}

.onThis-choose {
	width: 240rpx;
	height: 72rpx;
	font-size: 36rpx;
	color: #FFF;
	background-color: #FC943F;
	border-radius: 40rpx;
}

.noThis-choose {
	width: 210rpx;
	height: 60rpx;
	color: #FC943F;
	background-color: #FFF;
	border-radius: 40rpx;
	border: 1rpx solid #000;
}
.delivery {
	width: 100%;
	margin-bottom: 20rpx;
}

.door {
	width: 100%;
	margin-bottom: 20rpx;
}

.positioning {
	width: 82%;
}

.positioning view {}

.name {
	width: 100%;
	display: flex;
}

.number {
	width: 260rpx;
	display: flex;
}

.location {
	width: 100%;
	display: flex;
}

.time {
	width: 100%;
	display: flex;
}

.information {
	width: 100%;
	display: flex;
}